<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="600.0" prefWidth="800.0" stylesheets="@../gamified.css" type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <right>
      <ImageView fx:id="iconImage" fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </right>
   <center>
      <TextArea fx:id="labelText" prefHeight="200.0" prefWidth="300.0" styleClass="instructions" wrapText="true" BorderPane.alignment="CENTER">
         <opaqueInsets>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </opaqueInsets>
         <font>
            <Font name="Arial" size="18.0" />
         </font></TextArea>
   </center>
   <top>
        <Label id="title" fx:id="titleText" text="Title" BorderPane.alignment="CENTER">
         <font>
            <Font name="Arial Bold Italic" size="36.0" />
         </font>
      </Label>
   </top>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="okButton" text="OK">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
            <Button fx:id="quitButton" styleClass="quitButton" text="Quit" />
        </buttons>
      </ButtonBar>
   </bottom>
  </fx:root>
